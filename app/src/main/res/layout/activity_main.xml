<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Video 1"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_1"
            app:use_controller="false" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Video 2"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/player_view_1" />

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_2"
            app:use_controller="false" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/player_view_2">

            <RadioButton
                android:id="@+id/werther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Werther" />

            <RadioButton
                android:id="@+id/skippy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skippy" />

            <RadioButton
                android:id="@+id/oscar_meyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oscar Meyer" />

            <RadioButton
                android:id="@+id/sargento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sargento" />

            <RadioButton
                android:id="@+id/colgate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colgate" />

            <RadioButton
                android:id="@+id/pepcid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pepcid" />

        </RadioGroup>

        <CheckBox
            android:id="@+id/debug_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Debug Info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_group" />

        <TextView
            android:id="@+id/bytes_480"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="480p"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/debug_info"
            tools:text="480p: 1.0 MB Downloaded" />

        <TextView
            android:id="@+id/bytes_360"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bytes_480"
            tools:text="360p: 1.0 MB Downloaded" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
